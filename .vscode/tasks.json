{
  "version": "2.0.0",
  "tasks": [{
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${fileDirname}/*.cpp",
        "-o",
        "${workspaceFolder}/build/${fileDirnameBasename}.out"
      ],
      "group": { 
        "kind": "build",
        "isDefault": true,
      },
      "problemMatcher": [
        "$gcc"
      ],
    },
  ]
}